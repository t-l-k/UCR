<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="HidWizards.UCR.Plugins.ButtonToButton.Resources"
                    xmlns:controls="clr-namespace:HidWizards.UCR.Views.Controls;assembly=UCR">
    <DataTemplate x:Key="ButtonToButton">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <controls:DeviceBindingControl Grid.Column="0" Label="Button Input" DeviceBinding="{Binding Input}" Category="Momentary"/>
            <controls:DeviceBindingControl Grid.Column="1" Label="Button Output" HorizontalContentAlignment="Right" DeviceBinding="{Binding Output}" Category="Momentary"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>