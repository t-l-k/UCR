<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="HidWizards.UCR.Plugins.JoystickGroup.Resources"
                    xmlns:controls="clr-namespace:HidWizards.UCR.Views.Controls;assembly=UCR">
    <DataTemplate x:Key="JoystickGroup">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Device Input Sequence" Width="Auto" Padding="5">
                <TextBox Height="20" Text="{Binding InputSequence}"/>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Device Output Sequence" Width="Auto" Padding="5">
                <TextBox Height="20" Text="{Binding OutputSequence}"/>
            </GroupBox>
        </Grid>
    </DataTemplate>
</ResourceDictionary>