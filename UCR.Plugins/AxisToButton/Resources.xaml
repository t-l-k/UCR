<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="HidWizards.UCR.Plugins.AxisToButton.Resources">
    <DataTemplate x:Key="AxisToButton">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <GroupBox Header="Invert" Width="Auto">
                    <CheckBox Margin="10,5,0,0" IsChecked="{Binding Invert, Mode=TwoWay}"></CheckBox>
                </GroupBox>
                <GroupBox Header="Dead zone" Width="Auto">
                    <TextBox Width="30" Height="20" Text="{Binding DeadZone}"/>
                </GroupBox>
            </StackPanel>
            <Grid Grid.Row="1">

            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>