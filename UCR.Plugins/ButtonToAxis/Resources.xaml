<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HidWizards.UCR.Views.Controls;assembly=UCR"
                    xmlns:controls1="clr-namespace:HidWizards.UCR.Views.Controls;assembly=UCR"
                    x:Class="HidWizards.UCR.Plugins.ButtonToAxis.Resources">
    <DataTemplate x:Key="ButtonToAxis">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <controls1:DeviceBindingControl Label="Button Input low" DeviceBinding="{Binding InputLow}" Category="Momentary"/>
                <controls1:DeviceBindingControl Label="Button Input high" DeviceBinding="{Binding InputHigh}" Category="Momentary"/>
            </StackPanel>
            <controls1:DeviceBindingControl Grid.Column="1" Label="Button Output" HorizontalContentAlignment="Right" DeviceBinding="{Binding Output}" Category="Range"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>